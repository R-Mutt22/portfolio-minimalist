---
import Section from "../Section.astro"
import { languages } from "@cv"
---

<Section title="Idiomas">
  <ul>
    {
      languages.map(({ language, fluency }) => (
        <li>
          <article>
            <header>
              <div>
                <h3>{language}</h3>
              </div>
              <time>{fluency}</time>
            </header>
          </article>
        </li>
      ))
    }
  </ul>
</Section>


<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 4px;
  }

  div {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: -16px;
  }

  article h3 {
    font-weight: 500;
    color: #111;
  }

  time {
    color: #555;
    font-size: 0.85rem;
    min-width: 102px;
  }
</style>